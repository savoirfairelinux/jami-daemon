+    } else {
+        status = pj_activesock_send(turn_sock->active_sock,
+                                    &turn_sock->send_key, pkt, &len, 0);
+    }
+
+    if (status != PJ_SUCCESS && status != PJ_EPENDING) {
+        show_err(turn_sock, "socket send()", status);
+    }
