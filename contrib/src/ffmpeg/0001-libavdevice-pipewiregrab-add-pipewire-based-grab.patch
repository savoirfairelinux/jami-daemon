+
+    if (pw_ctx->core)
+        pw_core_disconnect(pw_ctx->core);
+
+    if (pw_ctx->context)
+        pw_context_destroy(pw_ctx->context);
+
+    if (pw_ctx->thread_loop) {
+        pw_thread_loop_destroy(pw_ctx->thread_loop);
+    }
