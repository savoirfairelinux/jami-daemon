+static int avfoundation_read_header(AVFormatContext *s)
+{
+    AVFoundationCaptureContext *ctx = s->priv_data;
+    ctx->first_pts = av_gettime();
+    if (ctx->list_devices)
+        return avfoundation_list_capture_devices(s);
+
+    return setup_streams(s);
+}
