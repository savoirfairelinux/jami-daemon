<?xml version="1.0" ?>
<node name="/datatransfer-introspec" xmlns:tp="http://telepathy.freedesktop.org/wiki/DbusSpec#extensions-v0">
    <interface name="cx.ring.Ring.DataTransfer">

		<tp:docstring xmlns="http://www.w3.org/1999/xhtml">
            Used to handle the data transfer API.
        </tp:docstring>

		<method name="sendFile" tp:name-for-bindings="sendFile">
           <tp:added version="2.3.0"/>
           <arg type="s" name="accountId" direction="in">
               <tp:docstring>
                   An account ID.
               </tp:docstring>
           </arg>
           <arg type="s" name="peerUri" direction="in">
               <tp:docstring>
                   Destination URI.
               </tp:docstring>
           </arg>
           <arg type="s" name="filename" direction="in">
               <tp:docstring>
                   Fully qualified pathname on file to send
               </tp:docstring>
           </arg>
           <arg type="s" name="result" direction="out">
           </arg>
		</method>

		<signal name="dataConnectionStatus" tp:name-for-bindings="dataConnectionStatus">
           <tp:added version="2.3.0"/>
           <tp:docstring>
               Notify clients that a data connection has changed
           </tp:docstring>
           <arg type="s" name="accountID" direction="in">
               <tp:docstring>
                   An account id.
               </tp:docstring>
           </arg>
		   <arg type="s" name="connectionID" direction="in">
               <tp:docstring>
                   A data connection id.
               </tp:docstring>
           </arg>
		   <arg type="i" name="status" direction="in">
               <tp:docstring>
                   A DRing::DataConnectionStatus code.
               </tp:docstring>
           </arg>
		   <arg type="i" name="error" direction="in">
               <tp:docstring>
                   A DRing::DataTransferError code.
               </tp:docstring>
           </arg>
		</signal>

		<signal name="fileTransferStatus" tp:name-for-bindings="fileTransferStatus">
           <tp:added version="2.3.0"/>
           <tp:docstring>
               Notify clients that a data connection has changed
           </tp:docstring>
           <arg type="s" name="accountID" direction="in">
               <tp:docstring>
                   An account id.
               </tp:docstring>
           </arg>
		   <arg type="s" name="connectionID" direction="in">
               <tp:docstring>
                   A data connection id.
               </tp:docstring>
           </arg>
		   <arg type="i" name="status" direction="in">
               <tp:docstring>
                   A DRing::FileTransferStatus code.
               </tp:docstring>
           </arg>
		   <arg type="i" name="error" direction="in">
               <tp:docstring>
                   A DRing::DataTransferError code.
               </tp:docstring>
           </arg>
		</signal>
	</interface>
</node>
